<Window x:Class="WPFTextGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTextGUI"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="JiS" Height="480" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Grid.ColumnSpan = "2" Grid.Row="0" Name="btnLoad" Content="Load" HorizontalAlignment="Stretch" Margin="10,0,10,0" VerticalAlignment="Center" Height="40" Click="btnLoad_Click" />

        <ScrollViewer Margin="0" Grid.Row="1">
            <TextBlock x:Name="txbInfo" TextWrapping="Wrap"/>
        </ScrollViewer>
        <ScrollViewer Margin="0" Grid.Row="1" Grid.Column="1">
            <TextBlock x:Name="txbDebugInfo" TextWrapping="Wrap"/>
        </ScrollViewer>
        
    </Grid>
</Window>
